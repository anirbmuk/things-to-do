{
  "name": "things-to-do",
  "version": "3.0.0",
  "description": "A light and fast todo-app, built with angular 16",
  "author": {
    "email": "anirban.mjee@gmail.com",
    "name": "anirbmuk"
  },
  "repository": {
    "type": "github",
    "url": "https://github.com/anirbmuk/things-to-do.git"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "lint": "ng lint",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:headless": "ng test --watch=false --browsers=ChromeHeadless",
    "cy:run": "cypress run --browser chrome",
    "cy:open": "cypress open --browser chrome",
    "cy:test": "cypress run --headless --browser chrome",
    "ci:test-e2e": "start-server-and-test start http://localhost:4200 cy:test",
    "ci:test": "npm run test:headless && npm run ci:test-e2e",
    "format:check": "prettier --config ./.prettierrc --list-different \"src/**/*{.ts,.js,.json,.css,.html}\" \"cypress/**/*{.js,.ts,.json}\"",
    "format:fix": "prettier --config ./.prettierrc --write \"src/**/*{.ts,.js,.json,.css,.html}\" \"cypress/**/*{.js,.ts,.json}\"",
    "clean": "rimraf dist && rimraf .firebase && rimraf firebase-debug.log",
    "build:prod": "ng build --configuration production",
    "deploy:prod": "npm run clean && npm run lint && npm run build:prod && firebase deploy && npm run clean",
    "prepare": "husky install"
  },
  "lint-staged": {
    "src/**/*{.ts,.js}": "eslint",
    "src/**/*{.ts,.js,.html,.css}": "npm run format:check --uncommitted"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^16.1.6",
    "@angular/cdk": "^16.1.5",
    "@angular/common": "^16.1.6",
    "@angular/compiler": "^16.1.6",
    "@angular/core": "^16.1.6",
    "@angular/forms": "^16.1.6",
    "@angular/material": "^16.1.5",
    "@angular/platform-browser": "^16.1.6",
    "@angular/platform-browser-dynamic": "^16.1.6",
    "@angular/router": "^16.1.6",
    "@angular/service-worker": "^16.1.6",
    "@ngrx/component-store": "^16.1.0",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.13.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.1.5",
    "@angular-eslint/builder": "16.1.0",
    "@angular-eslint/eslint-plugin": "16.1.0",
    "@angular-eslint/eslint-plugin-template": "16.1.0",
    "@angular-eslint/schematics": "16.1.0",
    "@angular-eslint/template-parser": "16.1.0",
    "@angular/cli": "^16.1.5",
    "@angular/compiler-cli": "^16.1.6",
    "@types/jasmine": "~3.10.0",
    "@types/node": "^20.1.7",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "autoprefixer": "^10.4.14",
    "cypress": "^12.17.2",
    "eslint": "^8.45.0",
    "eslint-plugin-sonarjs": "^0.19.0",
    "husky": "^8.0.3",
    "jasmine-core": "~4.0.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.1.0",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "lint-staged": "^13.2.3",
    "postcss": "^8.4.27",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "rimraf": "^5.0.1",
    "source-map-explorer": "^2.5.3",
    "start-server-and-test": "^2.0.0",
    "tailwindcss": "^3.3.3",
    "typescript": "~4.9.5"
  }
}
